                                        </td>
                                        <td>
                                            <%= eleman.stajTipiID%>
                                        </td>
                                        <td>
                                            <%= eleman.stajBaslangicTarihi%>
                                        </td>
                                        <td>
                                            <%= eleman.stajBitisTarihi%>
                                        </td>
                                        <td>
                                            <%= eleman.isGunuSayisi%>
                                        </td>
                                    <% }) %>
