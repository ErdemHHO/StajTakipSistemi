                                    <th class="text-center">Türü</th>
                                    <th class="text-center">Başlangıç Tarihi</th>
                                    <th class="text-center">Bitiş Tarihi</th>
                                    <th class="text-center">İş Günü</th>
                                </tr>
                            </thead>
                                <tbody>
                                    <% stajKayitTable.forEach(eleman => { %>
