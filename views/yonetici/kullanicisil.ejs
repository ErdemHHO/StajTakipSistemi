</head>
<body>


    <%- include("./partials/nav")  %>
    <nav class="main-menu">
        <ul>
            <li class="has-subnav">
                <a href="/admin/kullanicitablosu">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Kullanıcıları Görün
                    </span>
                </a>
                
            </li>
            <li class="has-subnav">
                <a href="/admin/kullaniciekle">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Yeni Kullanıcı Ekleyin
                    </span>
                </a>
                
            </li>
            <li class="has-subnav">
                <a href="/admin/kullaniciguncelle">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Kullanıcı Güncelleyin
                    </span>
                </a>
               
            </li>
            <li>
                <a href="/admin/kullanicisil">
                    <i class=" fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Kullanıcı Silin
                    </span>
                </a>
            </li>
    </nav>
    <div class="p-5 m-5">
        <main>
            <div class="text-center">
                <h4 class="mb-4 text-center border-bottom">KULLANICI SİLİN</h4>
            </div>
            
            <form class="needs-validation pt-5" method="post" novalidate>
                <div class="row g-5 mx-5">
                    <div class="col">
                        <div class="row g-3">
                        <div class="col-12">
                            <label for="numara" class="form-label">Silmek İstediğiniz Kullanıcının Numarası:</label>
                            <input name="kullanicinumarasi" type="text" class="form-control" id="numara" placeholder="" value="" required>
                            <div class="invalid-feedback">
                            Kullanıcının numarası boş geçilemez.
                            </div>
                        </div>
                        <button class="w-100 btn btn-danger btn-lg mx-2" type="submit">Sil</button> <br>
                        <% if (typeof message != "undefined") { %>
                            <div class="alert alert-<%= renk %> m-3 text-center">  
                             <%= message %> 
                           </div>
                        <% } %>
                    </div>
                </div>
            </form>
        </main>
    </div>
    
    


    <footer class="pt-5 bg-light text-dark text-center">
        <div class="text-start fw-lighter">
           <div class="row p-5 mx-5 text-center d-none d-md-flex justify-lg-content-between ">
              <div class="col-3"><p>SEHER MELİKE ÜNALDI</p> </div>
              <div class="col-3"><p>ZEHRA AN</p> </div>
              <div class="col-3"><p>ÖZER ARMAĞAN</p> </div>
              <div class="col-3"><p>ERDEM HACIHASANOĞLU</p> </div>
           </div>
        </div>
        <div class="pt-5 text-start fw-lighter">
