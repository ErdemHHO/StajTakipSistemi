    <div class="p-5 m-5">
        <main>
            <h4 class="text-center border-bottom">DUYURU YAYINLAYIN</h4>
            <form method="post" class="needs-validation" novalidate>
                <div class="row g-5 mx-5">
                    <div class="col">
                        <div class="row g-3">
                        <div class="col-12">
                            <label for="duyuruBaslik" class="form-label">Duyuru Başlık:</label>
                            <input name="duyuruBaslik" type="text" class="form-control" id="duyuruBaslik" placeholder="" value="" required >
                            <div class="invalid-feedback">
                            Duyuru başlığı boş geçilemez.
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="duyuruAciklama" class="form-label">Duyuru Açıklama:</label>
                            <div class="col-12">
                              <!-- <input name="duyuruAciklama" type="text" class="form-control"  placeholder="" value="" required style="padding-bottom: 400px;"> -->
                            <textarea id="editor" name="duyuruAciklaman" class="form-control" rows="10"></textarea>
                            </div>    
                            <div class="invalid-feedback">
                                Duyuru açıklaması boş geçilemez.
                            </div> 
                        </div>
                        
                        <div class="col-12">
                          <label  for="duyuruTur" class="form-label">Duyuru Türü</label>
                          <select name="duyuruTuru" class="form-select">
                          <option name="duyuruTuru" value="">Seçiniz</option>
                          <option>Genel</option>
                          <option>Oğrenci</option>
                          <option>Oğretmen</option>
                          </select>
                        <br><br>
                        <button class="w-100 btn btn-success btn-lg mx-2" type="submit">Kaydet</button> <br><br>
                        <% if (typeof message != "undefined") { %>
                            <div class="alert alert-warning m-3">
                             <%= message %> 
                           </div>
                        <% } %>
                    </div>
                </div>
            </form>
        </main>     
    </div>



