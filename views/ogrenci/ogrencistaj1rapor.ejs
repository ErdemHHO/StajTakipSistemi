<body>


    <%- include("./partials/nav")  %>
  
      <nav class="main-menu">
        <ul>
            <li class="has-subnav">
                <a href="/ogrenci/staj1basvur">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
