<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../css/sablonn.css">
    <link rel="stylesheet" href="../css/sablon.css">
    <link rel="stylesheet" href="../css/form-validation.css">
    <title>STAJ TAKİP SİSTEMİ</title>
</head>
<body>

    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <img class="headerImg" src="../img/kocaeli-universitesi-logo-2.png" alt="" style="height:50px;"> 
            <a class="navbar-brand" href="/komisyon/kullanicitablosu">Kocaeli Üniversitesi Staj Takip Sistemi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
              <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Kullanıcı Paneli</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
              </div>
              <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                      <a class="nav-link" href="/komisyon/profil">Profil</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/komisyon/kullanicitablosu">Staj/İme İşlemleri</a>
                    </li>
                    <li><a class="nav-link" href="/cikis">Çıkış</a></li>
                </ul>
              </div>
            </div>
        </div>
    </nav>

    <nav class="main-menu"> 
        <ul>
            <li class="has-subnav">
                <a href="/komisyon/kullanicitablosu">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Öğrenci Bilgilerini Görün
                    </span>
                </a>
                
            </li>
            <li class="has-subnav">
                <a href="/komisyon/sorumluluk">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Sorumlu Olan Öğrencileri Belirleyin
                    </span>
                </a>   
            </li>
            <li class="has-subnav">
                <a href="/komisyon/basvurubelgeleri">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Başvuru Onaylayın/Reddedin
                    </span>
                </a> 
            </li>
            <li class="has-subnav">
                <a href="/komisyon/ogrbelirle">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Staj/İme Sunum Bilgileri Belirleyin
                    </span>
                </a> 
            </li>
            <li class="has-subnav">
                <a href="/komisyon/belgegor">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Staj/İme Belge Görün
                    </span>
                </a> 
            </li>
            <li class="has-subnav">
                <a href="/komisyon/degerlendir">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Staj/İme Değerlendirin
                    </span>
                </a> 
            </li>
        </ul>
    </nav>


    <div class="p-5 m-5">
        <main>
            <h4 class="text-center border-bottom">BELGE SORGULAYIN</h4>
            <form method="post" class="d-flex row g-1 pt-5" role="search">
                <div class="row">
                    <div class="col-md-6">
                        <label for="kullaniciNumarasi" class="form-label">Kullanıcı Numarası:</label>
                        <input name="kullaniciNumarasi" class="form-control me-2" type="search" placeholder="Kullanıcı Numarası Girin">
                    </div>
                    <div class="col-md-6">
                        <label for="stajTipi" class="form-label">Staj Tipi:</label>
                        <select name="stajTipiSecim" id="rolID" class="form-select">
                        <option value="-1" selected>Seçiniz</option>
                        <% stajTipi.forEach(stajTipi => { %>
                            <option value="<%= stajTipi.dataValues.stajTipiID %> "><%= stajTipi.dataValues.stajTipiAdi %> 
                        <% }) %>
                        </select>
                        <div class="invalid-feedback">
                            Staj Tipi boş geçilemez.
                        </div>
                    </div>
                </div>
                
                <button class="btn btn-outline-success mt-3" type="submit">Belgeleri Ara</button>
            </form>

            <% if (typeof message != "undefined") { %>
                <div class="alert alert-<%= renk %> m-3 text-center">   
                 <%= message %> 
               </div>
            <% } %>

            <div class="row pt-5 d-flex justify-content-center">
               <div class="col-lg-4 d-flex justify-content-center text-white belge">
                <div class="card text-center border border-success border-2 rounded-3">
                    <div class="card-body">
                      <br><br>
                      <h5 class="card-title"><% if (typeof kullaniciNumarasi != "undefined") { %>   
                        <%= kullaniciNumarasi %> 
                    <% } %> Numaralı Öğrencinin Staj/IME Başvuru Belgesi</h5><br> 
                      <% if (typeof basvuruForm != "undefined") { %>    
                        <div class="container d-flex justify-content-center bg-success p-2 border border-2">       
                            <a class="text-center text-white" href="/komisyon/download-<%= secim %>basvuru"><i class="bi bi-file-earmark-pdf-fill text-danger"></i><%= basvuruForm %></a>  
                    </div><% } %>
                    </div>
                </div>
                </div>
                <div class="col-lg-4 d-flex justify-content-center text-white belge">
                    <div class="card text-center border border-success border-2 rounded-3">
                        <div class="card-body">
                        <br><br>
                        <h5 class="card-title">
                            <% if (typeof kullaniciNumarasi != "undefined") { %>   
                                <%= kullaniciNumarasi %> 
                            <% } %>  
                            Numaralı Öğrencinin Staj/IME Değerlendirme Belgesi</h5><br>
                        <% if (typeof degerlendirmeFormu != "undefined") { %>    
                            <div class="container d-flex justify-content-center bg-success p-2 border border-2">       
                                <a class="text-center text-white" href="/komisyon/download-<%= secim %>degerlendirme"><i class="bi bi-file-earmark-pdf-fill text-danger"></i><%= degerlendirmeFormu %></a>
                        </div><% } %>  
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 d-flex justify-content-center text-white belge">
                    <div class="card text-center border border-success border-2 rounded-3">
                        <div class="card-body">
                        <br><br>
                        <h5 class="card-title"><% if (typeof kullaniciNumarasi != "undefined") { %>   
                            <%= kullaniciNumarasi %> 
                        <% } %> Numaralı Öğrencinin Staj/IME Raporu </h5><br>
                        <% if (typeof stajRaporu != "undefined") { %>    
                            <div class="container d-flex justify-content-center bg-success p-2 border border-2">       
                                <a class="text-center text-white" href="/komisyon/download-<%= secim %>rapor"><i class="bi bi-file-earmark-pdf-fill text-danger"></i><%= stajRaporu %></a>
                        </div><% } %>
                        </div>
                    </div>
                </div> 
            </div>
            <br><br><br>
    </main>      
    </div>
    


    <footer class="pt-5 bg-light text-dark text-center">
        <div class="text-start fw-lighter">
           <div class="row p-5 mx-5 text-center d-none d-md-flex justify-lg-content-between ">
              <div class="col-3"><p>SEHER MELİKE ÜNALDI</p> </div>
              <div class="col-3"><p>ZEHRA AN</p> </div>
              <div class="col-3"><p>ÖZER ARMAĞAN</p> </div>
              <div class="col-3"><p>ERDEM HACIHASANOĞLU</p> </div>
           </div>
        </div>
        <div class="pt-5 text-start fw-lighter">
           <div class="row p-5 mx-5 text-center d-flex d-md-none">
              <p>SEHER MELİKE ÜNALDI</p>
              <p>ZEHRA AN</p>
              <p>ÖZER ARMAĞAN</p>
              <p>ERDEM HACIHASANOĞLU</p>
           </div>
        </div> 
        <hr>

