            <li class="has-subnav">
                <a href="/komisyon/degerlendir">
                    <i class="fa fa-2x bi bi-arrow-right"></i>
                    <span class="nav-text">
                        Staj/İme Değerlendirin
                    </span>
                </a> 
            </li>
        </ul>
    </nav>


    <div class="p-5 m-5">
        <main>
            <div class="text-center border-bottom">
                <h4>Sorumlu Olan Öğrencileri Belirleyin</h4>
            </div>
            
            <form method="post" class="needs-validation pt-5" novalidate>
                <div class="row g-5 mx-5">
                    <div class="col">
                        <div class="row g-3">                  
                            <div class="col-lg-6">
                                <label for="kullaniciNumarasi" class="form-label">Öğrencinin Numarası:</label>
                                <input type="text" name="kullaniciNumarasi" class="form-control" id="kullaniciNumarasi" >
                                <div class="invalid-feedback">
                                    Öğencinin numarası boş geçilemez.
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label for="stajTipi" class="form-label">Staj Tipi:</label>
                                <select name="stajTipiSecim" id="rolID" class="form-select">
                                <option value="-1" selected>Seçiniz</option>
                                <% stajTipi.forEach(stajTipi => { %>
                                    <option value="<%= stajTipi.dataValues.stajTipiID %> "><%= stajTipi.dataValues.stajTipiAdi %> 
                                <% }) %>
                                </select>
                                <div class="invalid-feedback">
                                    Staj Tipi boş geçilemez.
                                </div>
                            </div>
                            <div class="col-8 pt-4">
                                Sorumlu mu?
                              </div>
                              <div class="col-2 pt-4">
                                <div class="form-check">
                                  <input
                                    class="form-check-input"
                                    type="radio"
                                    name="sorumlu"
                                    value="1"
                                    id="sorumlu"
                                  />
                                  <label class="form-check-label" for="devKatYes">
                                    Evet
                                  </label>
                                </div>
                              </div>
                              <div class="col-2 pt-4">
                                <div class="form-check">
                                  <input
                                    class="form-check-input"
                                    type="radio"
                                    name="sorumlu"
                                    value="0"
                                    id="sorumlu"
                                  />
                                  <label class="form-check-label" for="devKatNo">
                                    Hayır
                                  </label>
                                </div>
                              </div>
                            <button class="w-100 btn btn-success btn-lg mx-2" type="submit">Kaydet</button> <br>
                        </div>
                </div>
            </form>

            <% if (typeof message != "undefined") { %>
                <div class="alert alert-<%= renk %> m-3 text-center">  
                 <%= message %> 
               </div>
            <% } %>
        </main> 
    </div>
    


    <footer class="pt-5 bg-light text-dark text-center">
        <div class="text-start fw-lighter">
           <div class="row p-5 mx-5 text-center d-none d-md-flex justify-lg-content-between ">
              <div class="col-3"><p>SEHER MELİKE ÜNALDI</p> </div>
              <div class="col-3"><p>ZEHRA AN</p> </div>
              <div class="col-3"><p>ÖZER ARMAĞAN</p> </div>
              <div class="col-3"><p>ERDEM HACIHASANOĞLU</p> </div>
           </div>
        </div>
        <div class="pt-5 text-start fw-lighter">
